<h1>記事詳細</h1>

<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <%= @article.title %>
  </div>
  <div class="card-body">
    <%= @article.content %>
  </div>
</div>

<% if user_signed_in? && current_user.id == @article.user.id %>
  <%= link_to '編集', edit_article_path(@article), class: "btn btn-warning" %>

<% end %>
  <%= link_to '一覧', articles_path, class: "btn btn-secondary" %>
